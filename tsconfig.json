{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2016",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "lib",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["**/*.ts", "jest.config.js"],
    "exclude": ["node_modules", "**/*.spec.ts", "examples"]
}
